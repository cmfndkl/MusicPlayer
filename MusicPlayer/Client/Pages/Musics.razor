@page "/"
@inject IMusicServices MusicServices

<PageTitle>Music Player</PageTitle>

<h3>Musics</h3>


<table class="table">
    <thead>
        <tr>
            <th>Şarkı Adı</th>
            <th>Sanatçı Adı</th>
            <th>
                Oynat
            </th>
            <th>            
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach(var music in MusicServices.musics)
        {
            <tr>
                <td>@music.MusicName</td>
                <td>@music.ArtistName</td>
                <audio controls controlsList="nodownload" name=" media">
                    <source src=@music.MusicUrl type="audio/mpeg">
                </audio>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>



@code {
    protected override async Task OnInitializedAsync()
    {
        await MusicServices.GetMusic();
    }
}
